{
    "$schema": "vscode-extension-schema.json",
    "name": "tickify",
    "publisher": "RNDev",
    "displayName": "Tickify",
    "description": "Automatically converts string interpolation to template literals",
    "version": "1.0.3",
    "icon": "assets/icon.png",
    "author": {
        "name": "RNDev"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other",
        "Formatters",
        "Programming Languages"
    ],
    "keywords": [
        "template-literals",
        "string-interpolation",
        "javascript",
        "typescript",
        "code-formatting"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:javascriptreact",
        "onLanguage:typescriptreact"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": []
    },
    "galleryBanner": {
        "color": "#2D2D2D",
        "theme": "dark"
    },
    "pricing": "Free",
    "repository": {
        "type": "git",
        "url": "https://github.com/bezalel6/tickify"
    },
    "bugs": {
        "url": "https://github.com/bezalel6/tickify/issues"
    },
    "homepage": "https://github.com/bezalel6/tickify#readme",
    "license": "MIT",
    "markdown": "github",
    "qna": "marketplace",
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": {
            "supported": true
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "rebuild": "npm run compile && vsce package && code --install-extension tickify-1.0.3.vsix"
    },
    "devDependencies": {
        "@types/estree": "^1.0.7",
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "eslint": "^8.13.0",
        "typescript": "^4.7.2"
    }
}